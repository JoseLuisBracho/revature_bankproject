	@Override
	public int createLogin(UserLogIn user) throws BusinessException {
		// TODO Auto-generated method stub
		int ac = 0;
		LogInCrudDAO daoLogin = new LogInCrudDAOImpl();
		
		if (user!=null) {
			ac = daoLogin.createLogin(user);
		}
		
		return ac;
	}

